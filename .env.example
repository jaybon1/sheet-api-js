# 서버 기본 설정
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Google Sheets Configuration
GOOGLE_SHEETS_API_KEY=your-api-key-here

# 보안 설정
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_JWT_AUTH=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Swagger 설정
ENABLE_SWAGGER=true
SWAGGER_CUSTOM_CSS=.swagger-ui .topbar { display: none }
SWAGGER_TITLE=Google Sheets API Documentation

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
